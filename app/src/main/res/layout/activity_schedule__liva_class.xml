<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Teacher.Activity.Schedule_LivaClass_Activity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_schedule_live_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/schedule_a_live_class"
                android:textColor="@android:color/white" />
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:background="@android:color/white"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/horizontal_main_margin"
                android:orientation="vertical">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/class_title_and_keywords" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/horizontal_main_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_class_title"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Class Title"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_keyword"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/keywords"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:background="@android:color/white"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/horizontal_main_margin"
                android:orientation="vertical">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date_and_time" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/horizontal_main_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_date"
                        android:focusable="false"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/date"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_start_time"
                            android:focusable="false"
                            style="@style/Base.TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/start_time"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimary" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edt_end_time"
                            android:focusable="false"
                            style="@style/Base.TextAppearance.AppCompat.Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/end_time"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/colorPrimary" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:background="@android:color/white"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/horizontal_main_margin"
                android:orientation="vertical">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/timezone_and_price" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/horizontal_main_margin">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_time_zone"
                        android:focusable="false"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/timezone"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edt_price"
                        style="@style/Base.TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/price"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginEnd="@dimen/_55sdp"
            android:gravity="center"
            android:textSize="@dimen/_20sdp"
            android:text="@string/create"
            android:id="@+id/btn_create_live_class"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/rounded_blue_button"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>