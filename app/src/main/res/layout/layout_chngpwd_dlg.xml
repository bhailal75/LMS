<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/horizontal_main_margin"
    android:orientation="vertical">

    <ImageView
        android:layoutDirection="ltr"
        android:id="@+id/close_dialog"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@mipmap/ic_close"
        android:padding="@dimen/_10sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.bhoomi.lms.Student.Constants.MyMediumText
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/vertical_main_margin"
            android:text="@string/chngPwd" />

        <View
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black_35" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/password_imgVw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.07"
                android:src="@mipmap/padlock" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.03" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_oldpwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/oldpwd_textInputEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/old_pwd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@android:color/darker_gray" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/newpassword_imgVw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.07"
                android:src="@mipmap/padlock_dark" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.03" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_newpwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/newpwd_textInputEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_pwd"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@android:color/darker_gray" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/retype_password_imgVw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.07"
                android:src="@mipmap/padlock" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.03" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_retypepwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/retypepwd_textInputEdittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/re_type_new_passwod"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary"
                    android:textColorHint="@android:color/darker_gray" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.2" />

            <Button
                android:textSize="@dimen/_17sdp"
                android:id="@+id/buttn_chngcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.6"
                android:background="@drawable/rounded_green_button"
                android:text="@string/change"
                android:textColor="@android:color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.2" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>