<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgLightGray"
    android:orientation="vertical"
    tools:context=".Teacher.Activity.Curriculum_Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_subcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <com.example.bhoomi.lms.Student.Constants.MyMediumText
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_sub_categories"
            android:textColor="@android:color/white" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@color/whitePrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="@dimen/horizontal_main_margin"
            android:orientation="horizontal"
            android:weightSum="1">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_sub_categories"
                android:textColor="@android:color/black" />


        </LinearLayout>

        <EditText
            android:id="@+id/spinner_category"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/horizontal_main_margin"
            android:layout_marginRight="@dimen/horizontal_main_margin"
            android:layout_marginTop="5dp"
            android:focusable="false"
            android:hint="@string/select_category"
            android:textColor="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_qtitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.9">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/qtitle_textInputEditText"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/subcat_name"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>


        <RadioGroup
            android:id="@+id/radiogrp_stts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active" />

            <RadioButton
                android:id="@+id/radio_deactive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deactive" />

        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/vertical_main_margin"
        android:orientation="horizontal"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/buttn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.6"
            android:background="@drawable/rounded_puple_button"
            android:text="@string/Save"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.2" />

    </LinearLayout>


</LinearLayout>