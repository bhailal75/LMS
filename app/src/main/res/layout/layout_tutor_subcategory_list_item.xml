<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_main_margin"
        android:layout_marginRight="@dimen/horizontal_main_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/horizontal_main_margin"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.8"
                >

                <com.example.bhoomi.lms.Student.Constants.MyBoldText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Programming"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/text_title"/>

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="php"
                    android:maxLines="1"
                    android:ellipsize="end"

                    android:id="@+id/text_subtitle"/>


                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="John Smith"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/text_desc"/>

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Active"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/text_stts"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/update_imageview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:src="@drawable/pencil"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.04"/>

            <ImageView
                android:padding="@dimen/_1sdp"
                android:id="@+id/delete_imageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:src="@drawable/trash"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>