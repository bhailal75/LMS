<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".Teacher.Activity.CreateCourse_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_quiz"
                android:textColor="@android:color/white"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>


        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:background="@android:color/white"
            android:layout_margin="@dimen/horizontal_main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/horizontal_main_margin">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_title_and_cantrol"
                    />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInput_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/horizontal_main_margin"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditText_quiz_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/quiz_title"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorPrimary" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/spinner_category"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:focusable="false"
                    android:hint="@string/select_category"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/horizontal_main_margin"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/spinner_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="false"
                    android:hint="@string/select_sub_category"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="@dimen/horizontal_main_margin"/>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:background="@android:color/white"
            android:layout_margin="@dimen/horizontal_main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/horizontal_main_margin">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/course_and_syllabus"
                    />


                <android.support.design.widget.TextInputEditText
                    android:id="@+id/spinner_course"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="false"
                    android:hint="@string/select_course"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    style="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="@dimen/horizontal_main_margin"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textInput_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/textInputEditText_syllabus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/syllabus"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:textColor="@color/colorPrimary" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:background="@android:color/white"
            android:layout_margin="@dimen/horizontal_main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/horizontal_main_margin">

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/quiz_image"
                    />

                <ImageView
                    android:id="@+id/image_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="@dimen/horizontal_main_margin"
                    android:src="@drawable/upload"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/vertical_main_margin"
            android:weightSum="1">

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.3"/>

            <Button
                android:id="@+id/buttn_continue"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/continue_"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_puple_button"/>

            <View
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="0.3"/>

        </LinearLayout>



    </LinearLayout>

</ScrollView>