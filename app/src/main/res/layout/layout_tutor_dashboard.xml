<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutore_dashboard"
                android:textColor="@android:color/white"
                android:gravity="center"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_below="@+id/toolbar_dashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/vertical_main_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1"
                >

                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15"
                    android:text="@string/welcome_to_dashbourd"
                    android:layout_margin="@dimen/vertical_main_margin"
                    style="@style/Base.TextAppearance.AppCompat.Large"
                    android:gravity="center_horizontal"
                    android:id="@+id/text_title"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.22"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@android:color/white"
                    android:layout_margin="@dimen/horizontal_main_margin">

                    <LinearLayout
                        android:id="@+id/ll_quiz"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.32"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@color/colorgBlue">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:id="@+id/text_total_quize"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            style="@style/Base.TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="5"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="@string/total_quiz"/>


                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"/>

                    <LinearLayout
                        android:id="@+id/ll_participants"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.32"
                        android:orientation="vertical"
                        android:background="@color/colorgRed">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:id="@+id/text_total_participants"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            style="@style/Base.TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="5"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="@string/new_participants"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"/>

                    <LinearLayout
                        android:id="@+id/ll_course"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.32"
                        android:orientation="vertical"
                        android:background="@color/colorPrimaryDark">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.2"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:id="@+id/text_total_course"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.3"
                            style="@style/Base.TextAppearance.AppCompat.Large"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="5"/>

                        <com.example.bhoomi.lms.Student.Constants.MyMediumText
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="@string/total_courses"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.78"
                    android:weightSum="1"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/horizontal_main_margin"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ll_createcourse"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.485"
                                android:orientation="vertical"
                                android:background="@color/colorPrimary"
                                android:weightSum="1">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.1"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:src="@drawable/corce_o"/>

                                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.4"
                                    android:gravity="center"
                                    android:text="@string/view_course"
                                    android:textColor="@android:color/white"/>


                            </LinearLayout>




                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.03"/>

                            <LinearLayout
                                android:id="@+id/ll_categories"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.485"
                                android:orientation="vertical"
                                android:background="@color/colorgPurple"
                                android:weightSum="1">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.1"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.5"
                                    android:layout_gravity="center"
                                    android:src="@drawable/category"/>

                                <com.example.bhoomi.lms.Student.Constants.MyMediumText
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="0.4"
                                    android:gravity="center"
                                    android:text="@string/view_categories"
                                    android:textColor="@android:color/white"/>

                            </LinearLayout>


                        </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.03"/>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_createquiz"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.485"
                            android:orientation="vertical"
                            android:background="@color/colorgPink"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:src="@drawable/quiz_create"/>

                            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:text="@string/view_quiz"
                                android:textColor="@android:color/white"/>


                        </LinearLayout>




                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"/>

                        <LinearLayout
                            android:id="@+id/ll_liveclass"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.485"
                            android:orientation="vertical"
                            android:background="@color/colorgBlue"
                            android:weightSum="1">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.1"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center"
                                android:src="@drawable/live_class"/>

                            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:text="@string/live_class"
                                android:textColor="@android:color/white"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.32"/>



            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/horizontal_main_margin"
                        android:layout_marginRight="@dimen/horizontal_main_margin"
                        android:weightSum="1">



                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.32"
                            android:weightSum="1"
                            >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                            <com.example.bhoomi.lms.Student.Constants.CircularImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.4"
                                app:border_width=".8dp"
                                android:layout_gravity="center|bottom"
                                android:src="@drawable/translator"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.32">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                            <com.example.bhoomi.lms.Student.Constants.CircularImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.4"
                                app:border_width=".8dp"
                                android:layout_gravity="center|bottom"
                                android:src="@drawable/participet"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.03"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.32">

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                            <com.example.bhoomi.lms.Student.Constants.CircularImageView
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.4"
                                app:border_width=".8dp"
                                android:layout_gravity="center|bottom"
                                android:src="@drawable/course_total"/>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.3"/>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"/>

                </LinearLayout>

            </FrameLayout>


        </RelativeLayout>


    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nvView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/gradient_drawer"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@android:color/white"
        >

        <ExpandableListView
            android:scrollbars="none"
            android:layoutDirection="rtl"
            android:id="@+id/left_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:background="@android:color/transparent"
            android:childDivider="@drawable/child_separator"
            android:divider="@android:color/white"
            android:dividerHeight="0.05dp"
            android:groupIndicator="@null"
            />


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>