<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Teacher.Activity.CreateContent_Activity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar_addcontent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp">

        <com.example.bhoomi.lms.Student.Constants.MyMediumText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_content"
            android:textColor="@android:color/white"
            android:gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Medium"/>


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:background="@android:color/white"
        android:layout_margin="@dimen/horizontal_main_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/horizontal_main_margin">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/curriculum_content"
                />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/spinner_curriculum_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:hint="@string/select_curriculum_section"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/horizontal_main_margin"
                style="@style/Base.TextAppearance.AppCompat.Medium"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInput_coursetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/horizontal_main_margin"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/title_textInputEditText"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/title"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/colorPrimary" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        android:background="@android:color/white"
        android:layout_margin="@dimen/horizontal_main_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/horizontal_main_margin">

            <com.example.bhoomi.lms.Student.Constants.MyMediumText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_media_type_file_video"
                />

            <ImageView
                android:id="@+id/imgview_addImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/horizontal_main_margin"
                android:src="@drawable/upload"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/vertical_main_margin"
        android:weightSum="1">

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.3"/>

        <Button
            android:id="@+id/buttn_create"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/Save"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_puple_button"/>

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="0.3"/>

    </LinearLayout>



</LinearLayout>