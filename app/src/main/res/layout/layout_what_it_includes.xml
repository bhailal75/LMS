<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/semi_margin"
    android:layout_marginLeft="@dimen/horizontal_main_margin"
    android:layout_marginRight="@dimen/horizontal_main_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:src="@mipmap/user_dark"/>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="0.05"/>

    <com.example.bhoomi.lms.Student.Constants.MyRegularText
        android:id="@+id/text_courseVideos"
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_subtitle"
        android:text="13 hours on demand videos"
        style="@style/Base.TextAppearance.AppCompat.Small"
        />

</LinearLayout>
