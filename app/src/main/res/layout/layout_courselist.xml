<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/white">


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/ll_course"
    android:orientation="horizontal"
    android:layout_margin="@dimen/horizontal_main_margin"
    android:weightSum="1"
    android:layout_weight="0.998">

    <ImageView
        android:id="@+id/imageView_thumb"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/horizontal_main_margin"
       />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_margin="@dimen/semi_margin"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView_coursename"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="2"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy "
            android:layout_weight="0.35"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/textiew_coursesubtiitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:maxLines="1"
            android:text="subtitle"
            android:gravity="bottom"
            android:layout_weight="0.2"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:layout_weight="0.2"
            android:orientation="horizontal">


                <RatingBar
                    android:id="@+id/ratingbar_course"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="hi"
                    android:max="5"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:ellipsize="end"
                    android:theme="@style/RatingBar"/>

            <TextView
                android:id="@+id/textView_ratingPpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="(5220)"
                android:layout_marginLeft="@dimen/semi_margin"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:ellipsize="end"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1"
            android:layout_weight="0.25"
            android:layout_gravity="end"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_newPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="र640"
                style="@style/TextAppearance.AppCompat.Medium"
                android:gravity="center"
                android:layout_marginLeft="@dimen/semi_margin"
                android:layout_marginRight="@dimen/semi_margin"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:ellipsize="end"/>


            <TextView
                android:id="@+id/textView_oldPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="र2150"
                android:gravity="center"
                android:ellipsize="end"
                />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.002"
        android:background="@android:color/darker_gray"/>
</LinearLayout>